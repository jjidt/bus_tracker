<h3><%= @line.name %></h3>

<%= link_to "Edit", edit_line_path(@line) %>
<%= link_to "DELETE", line_path(@line),
                :data => {:confirm => "Are you sure?",
                          :method => "delete"},
                :class => 'btn btn-danger' %>

<h4>Stations</h4>
<% @line.stations.each do |station| %>
    <li><a href="<%= line_path(line) %>"><%= station.name %></a></li>
  <% end %>
